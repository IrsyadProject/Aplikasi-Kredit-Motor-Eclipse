<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PengajuanKreditActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kreditor"/>
        
        <Spinner 
            android:id="@+id/SpinnerNamaKreditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Motor" />
        
        <Spinner 
            android:id="@+id/SpinnerNamaMotor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView 
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Motor :" />
        
        <TextView 
            android:id="@+id/textNamaMotor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
			android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView 
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga :"/>
        <TextView 
            android:id="@+id/textHargaMotor"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView 
            android:id="@+id/textView3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="DP / Uang Muka" />
        
        <EditText 
            android:id="@+id/editUangMuka"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="number"/>
        <TextView 
            android:id="@+id/textView4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Bunga /Tahun"/>
        <EditText 
            android:id="@+id/editBunga"
            android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="number" />
        
        <TextView 
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Lama Angsuran (Bulan)"/>
        
        <EditText 
            android:id="@+id/editLamaAngsuran"
            android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="number" />
        
        <TextView 
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Hasil Perhitungan: "/>
        
        <Button 
            android:id="@+id/buttonProsesPengajuanKredit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="KlikbuttonProsesPengajuanKredit"
			android:text="Proses"/>
        <TextView 
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Harga Kredit: "/>
        <TextView 
            android:id="@+id/textHargaKredit"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView 
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Total Kredit: "/>
        <TextView 
            android:id="@+id/textTotalKredit"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView 
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Angsuran per Bulan: "/>
        
        <TextView 
            android:id="@+id/textAngsuranPerbulan"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="0"
			android:textAppearance="?android:attr/textAppearanceLarge"/>
        <Button 
            android:id="@+id/buttonSimpanPengajuanKredit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="KlikbuttonSimpanPengajuanKredit"
			android:text="Simpan"/>
        <Button 
            android:id="@+id/buttonResetKredit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="KlikbuttonResetKredit"
			android:text="Reset"/>
    </LinearLayout>
</ScrollView>